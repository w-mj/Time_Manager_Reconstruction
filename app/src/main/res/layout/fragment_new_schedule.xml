<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="wesayallright.timemanager.surface.newScheduleFragment.newSchedule">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        >

        <ImageView
            android:id="@+id/fns_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:contentDescription="头像" />

        <Spinner
            android:id="@+id/fns_head_week_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/fns_head_burger"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/img_burger"
            android:paddingStart="0dp"
            android:paddingEnd="2dp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/fns_top_week_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"> </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/fns_left_time_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"> </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toEndOf="@id/fns_left_time_bar">

                <RelativeLayout
                    android:id="@+id/fns_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_monday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_tuesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_wednesday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_thursday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_friday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/fns_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"> </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</LinearLayout>
